<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laila.Shell.SampleApp1"
        xmlns:shellControls="clr-namespace:Laila.Shell.Controls;assembly=Laila.Shell" 
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="1" Margin="0,0,4,0" VerticalAlignment="Center">Folder:</TextBlock>
        <shellControls:FolderComboBox Grid.Row="1" Grid.Column="1" x:Name="FolderComboBox" BorderBrush="Red" BorderThickness="1" />

        <TextBlock Grid.Row="3" Margin="0,0,4,0" VerticalAlignment="Center">Folder:</TextBlock>
        <shellControls:FolderComboBox Grid.Row="3" Grid.Column="1" x:Name="FolderComboBox2" BorderBrush="Red" BorderThickness="1" />
    </Grid>
</Window>
