<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laila.Shell.SampleApp"
        xmlns:controls="clr-namespace:Laila.Shell.Controls;assembly=Laila.Shell"
        mc:Ignorable="d" Icon="{Binding DataContext.Folder.Icon32, ElementName=detailListView}"
        Height="450" Width="800" Title="{Binding DataContext.Folder.DisplayName, ElementName=detailListView}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <controls:DetailsListView x:Name="detailListView" FolderName="shell:MyComputerFolder" />
    </Grid>
</Window>
