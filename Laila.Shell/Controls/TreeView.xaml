                        <Setter Property="Visibility" Value="Visible" />
                        <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                        <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                    </Style>
                </TreeView.ItemContainerStyle>
            </TreeView>

            <Separator Grid.Row="3" />

            <TreeView Grid.Row="4" x:Name="treeView3" Background="Transparent" ItemsSource="{Binding Folders3}" VirtualizingStackPanel.IsVirtualizing="False">
                <TreeView.Style>
                    <Style TargetType="TreeView" BasedOn="{StaticResource {x:Type TreeView}}">
                        <Setter Property="TreeView.Background" Value="Transparent" />
                        <Setter Property="TreeView.BorderThickness" Value="0" />
                    </Style>
                </TreeView.Style>
                <TreeView.Resources>
                    <HierarchicalDataTemplate DataType="{x:Type root:TreeViewFolder}" ItemsSource="{Binding Path=FoldersThreaded, Converter={StaticResource sorterConverter}, ConverterParameter=ItemNameDisplaySortValue}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image Source="{Binding Icon16}" Margin="0,0,4,0">
                                <Image.Style>
                                    <Style>
                                        <Setter Property="Image.Opacity" Value="1" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsHidden}" Value="True">
                                                <Setter Property="Image.Opacity" Value="0.5" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                                <Setter Property="Image.Opacity" Value="0.5" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Image.Style>
                            </Image>
                            <Image Source="{Binding Overlay16}" Margin="0,0,4,0">
                                <Image.Style>
                                    <Style>
                                        <Setter Property="Image.Opacity" Value="1" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsHidden}" Value="True">
                                                <Setter Property="Image.Opacity" Value="0.5" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                                <Setter Property="Image.Opacity" Value="0.5" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Image.Style>
                            </Image>
                            <Viewbox StretchDirection="Both" Stretch="Uniform" Width="16" Height="16" Margin="0,0,4,0">
                                <Viewbox.Style>
                                    <Style>
                                        <Setter Property="Control.Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                                <Setter Property="Control.Visibility" Value="Visible" />
