                                   RenderTransformOrigin="0.5,0.5" Margin="2,0,-2,0">
                            <Image.RenderTransform>
                                <RotateTransform Angle="0"/>
                            </Image.RenderTransform>
                        </Image>
                    </Border>
                    <ControlTemplate.Triggers>
